<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_group_details_progressBar"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/fragment_group_details_content"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A Group Since May 2014"
            android:id="@+id/fragment_group_details_created_text"
            android:textSize="18sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Create Event"
            android:id="@+id/fragment_group_details_createEvent"
            android:textSize="18sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Leave Group"
            android:theme="@style/AppTheme.Button.Login"
            android:id="@+id/fragment_group_details_leaveButton"
            android:textSize="18sp"/>

    </LinearLayout>

</LinearLayout>